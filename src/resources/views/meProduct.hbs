<div class="container mt-4 mb-4">
    <div class="trash-product mt-4 mb-4">
        <a href="/trash-product" > Thùng Rác {{deleteCount}} </a>
    </div>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">Stt</th>
            <th scope="col">Name {{{sortable 'name' _sort}}}
            </th>
            <th scope="col">Price {{{sortable 'price' _sort}}}
            </th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            <th scope="col">Sex</th>
            <th scope="col">Edit</th>
            </tr>
        </thead>
        <tbody>
            {{#each product}}
            <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.description}}</td>
            <td>{{this.image}}</td>
            <td>{{this.sex}}</td>
            <td>
                <a type="button" href="/edit/{{this._id}}" class="btn btn-outline-primary">Sửa</a>
                <a type="button" id="btn-delete" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal" data-id="{{this._id}}">Xoá</a>
            </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn có muốn xóa không ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="btn-delete-product">Xóa</button>
            </div>
            </div>
        </div>
    </div>
</div>

<form name="form-delete-product" method="POST" action=""></form>
<form name="form-sort-product" method="GET" action=""></form>
<script>
    document.addEventListener("DOMContentLoaded",function(){
        let productId
        const deleteForm = document.forms['form-delete-product']
        const sortForm = document.forms['form-sort-product']
        const btnDelete = document.getElementById('btn-delete-product')
        
        $('#deleteModal').on('show.bs.modal', function(event) {
            const button =$(event.relatedTarget)
            productId = button.data('id')
            btnDelete.onclick = function(){
                deleteForm.action=`/delete/${productId}?_method=DELETE`
                deleteForm.submit()
            }
        })
    })

</script>
